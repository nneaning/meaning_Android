<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GroupFragment">

    <data>

        <variable
            name="groupFragment"
            type="meaning.morning.GroupFragment" />

        <variable
            name="Group"
            type="meaning.morning.GroupData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/layout_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingVertical="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageview_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/logo_img" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageview_add_group"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/add_btn"
            app:layout_constraintBottom_toBottomOf="@id/textview_my_group"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_my_group" />

        <TextView
                android:id="@+id/textview_my_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:text="내 그룹"
                android:textColor="@color/grey1"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_logo"/>

            <TextView
                android:id="@+id/textview_add_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="그룹 생성"
                android:textColor="@color/meaning_navy"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/imageview_add_group"
                app:layout_constraintRight_toLeftOf="@id/imageview_add_group"
                app:layout_constraintTop_toTopOf="@id/imageview_add_group" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_my_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@color/meaning_lightblue"
                android:paddingVertical="20dp"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toTopOf="@id/textview_other_group"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_my_group">

                <TextView
                    android:id="@+id/textview_groupName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="17dp"
                    android:lines="1"
                    android:text="효송이를 좋아하는 그룹"
                    android:textColor="@color/meaning_navy"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/textview_number"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="29dp"
                    android:background="@drawable/group_numberofpeople_background"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="10/10"
                    android:textColor="@color/meaning_navy"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/textview_groupName"
                    app:layout_constraintRight_toLeftOf="@+id/imageview_next"
                    app:layout_constraintTop_toTopOf="@+id/textview_groupName" />

                <ImageView
                    android:id="@+id/imageview_next"
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/vector"
                    app:layout_constraintBottom_toBottomOf="@id/textview_groupName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textview_groupName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textview_other_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="16dp"
                android:text="다른 그룹 구경하기"
                android:textColor="@color/grey1"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="@id/textview_my_group"
                app:layout_constraintTop_toBottomOf="@id/layout_my_group" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_group_recommend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_other_group" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_other_group"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_group_recommend" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>