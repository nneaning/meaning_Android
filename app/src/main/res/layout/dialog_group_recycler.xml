<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dialogBinding"
            type="meaning.morning.BindingDialog" />
    </data>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/close_btn"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/textview_dialog_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:lines="1"
            android:text="default"
            android:textSize="17dp"
            android:textColor="@color/grey2_4F"
            android:layout_marginTop="92dp"/>

        <TextView
            android:id="@+id/textview_okBtn"
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:text="ë„¤!"
            android:textSize="14sp"
            android:textColor="@color/meaning_white"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/group_button_background"
            android:paddingHorizontal="118dp"
            android:paddingVertical="13dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="103dp"/>

    </LinearLayout>
</layout>
