<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dialogBinding"
            type="meaning.morning.presentation.group.GroupDialog" />
    </data>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="325dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/close_btn" />

        <TextView
            android:id="@+id/textview_dialog_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:lines="1"
            tools:text="default"
            android:textAlignment="center"
            android:textColor="@color/grey2_4F"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textview_okBtn"
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="103dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/group_button_background"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:gravity="center"
            android:paddingHorizontal="118dp"
            android:paddingVertical="13dp"
            android:text="ë„¤!"
            android:textAlignment="center"
            android:textColor="@color/meaning_white_FF"
            android:textSize="14sp" />

    </LinearLayout>
</layout>
