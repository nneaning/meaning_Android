<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Andromeaning" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/meaning_navy_17</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/meaning_ivory_F6</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Andromeaning.camera" parent="Theme.Andromeaning">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/camera_black_13</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Andromeaning.login" parent="Theme.Andromeaning">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Andromeaning.login.button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/spoqahansansneo_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/round_rectangle_6dp</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="Theme.Andromeaning.mission" parent="Theme.Andromeaning">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/meaning_lightblue_DE</item>
        <!-- Customize your theme here. -->
    </style>
</resources>