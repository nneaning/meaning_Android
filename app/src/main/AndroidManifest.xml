<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="meaning.morning">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_meaning_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_meaning_icon_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Andromeaning">
        <activity android:name=".presentation.home.card.CardReadingActivity"
            android:theme="@style/Theme.Andromeaning.mission"/>
        <activity android:name=".presentation.home.card.CardWriteDiaryActivity"
            android:theme="@style/Theme.Andromeaning.mission"/>
        <activity android:name=".presentation.home.card.CardPromiseActivity"
            android:theme="@style/Theme.Andromeaning"/>
        <activity android:name=".presentation.home.card.CardTimeStampActivity"
            android:theme="@style/Theme.Andromeaning.mission"/>
        <activity android:name=".presentation.group.feed.GroupSettingActivity" />
        <activity android:name=".presentation.group.CompleteGroupActivity" />
        <activity android:name=".presentation.group.AddGroupActivity"
            android:theme="@style/Theme.Andromeaning"/>
        <activity android:name=".presentation.home.MainActivity"
            android:theme="@style/Theme.Andromeaning"/>
        <activity android:name=".presentation.group.GroupBlankActivity" />
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.Andromeaning.login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.onboarding.OnBoardingActivity"
            android:theme="@style/Theme.Andromeaning.login">
        </activity>
        <activity android:name=".presentation.group.feed.GroupFeedSnsActivity"/>
        <activity android:name=".presentation.home.feed.MyFeedSnsActivity"/>
        <activity android:name=".presentation.camera.TimeStampCameraActivity"
            android:theme="@style/Theme.Andromeaning.camera"/>
        <activity android:name=".presentation.group.feed.GroupFeedActivity"/>
        <activity android:name=".presentation.home.feed.MyFeedMainActivity"/>
        <activity android:name=".presentation.login.LoginActivity"
            android:theme="@style/Theme.Andromeaning.login"/>
    </application>

</manifest>